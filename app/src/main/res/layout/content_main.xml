<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".view.activities.MainActivity">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical" android:id="@+id/cal_layout">


        <TextView
                  android:id="@+id/bookText"
                  android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="Når ønsker du å booke parkering?"
                  android:textAlignment="center"
                  android:layout_marginTop="12dp"
                  android:textColor="@color/textGray"

        />

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:id="@+id/calendarView"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:mcv_showOtherDates="out_of_range"
                app:mcv_selectionColor="@color/secondaryColor"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="12dp"
                app:mcv_tileSize="32dp"
                app:mcv_headerTextAppearance="@style/MatCalHeader"
        />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>